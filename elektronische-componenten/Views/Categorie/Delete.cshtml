                <input type="submit" value="Delete" class="btn btn-danger" />
            }
            else
            {
                <p>
                    <b>@ViewBag.Error</b>
                </p>
                <br />
            }

            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

